<p id="notice"><%= notice %></p>

<h1>Feels</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feels.each do |feel| %>
      <tr>
        <td><%= feel.post %></td>
        <td><%= feel.body %></td>
        <td><%= link_to 'Show', feel %></td>
        <td><%= link_to 'Edit', edit_feel_path(feel) %></td>
        <td><%= link_to 'Destroy', feel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feel', new_feel_path %>
